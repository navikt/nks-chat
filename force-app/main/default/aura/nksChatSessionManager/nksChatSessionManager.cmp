<aura:component
    implements="lightning:availableForFlowScreens, flexipage:availableForRecordHome, force:hasRecordId"
    access="global"
    controller="ChatSurveyController"
>
    <aura:attribute name="record" type="Object" />
    <force:recordData layoutType="FULL" recordId="{!v.recordId}" fields="CaseId" targetFields="{!v.record}" />

    <lightning:conversationToolkitAPI aura:id="conversationKit" />
    <aura:handler event="lightning:conversationAgentSend" action="{! c.onAgentSend}" />
</aura:component>
